                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/submission_of_quarterly_progress_report_and_annual_progress_report_in_the_prescribed_time_frame"
                    android:background="@color/white"
                    android:textColor="@android:color/black" />

                <EditText
