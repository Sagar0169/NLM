<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <RelativeLayout
        android:id="@+id/rlParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rlToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"

            android:background="@drawable/headear_back_small">

            <LinearLayout
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivDrawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_drawer" />

            </LinearLayout>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rlToolbar"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvNoOfSchemeCovered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_15"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:background="@drawable/curve_all_corner_yellow"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingVertical="@dimen/dp_40"
                    android:text="@string/no_of_scheme_covered_4"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/tvTotalVisit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_15"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:background="@drawable/curve_all_corner_yellow"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingVertical="@dimen/dp_40"
                    android:layout_below="@id/tvNoOfSchemeCovered"
                    android:text="@string/total_visit"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/tvNoOfStatesCovered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_15"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:background="@drawable/curve_all_corner_yellow"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingVertical="@dimen/dp_40"
                    android:layout_below="@id/tvTotalVisit"
                    android:text="@string/no_of_states_covered"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/tvTotalNoOfReportsSubmittedByNlm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_15"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:layout_below="@id/tvNoOfStatesCovered"
                    android:background="@drawable/curve_all_corner_yellow"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingVertical="@dimen/dp_40"
                    android:text="@string/total_no_of_reports_submitted_by_nlm"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20" />

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

</layout>