    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <RelativeLayout
        android:id="@+id/rlParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.activity.RegistrationActivity">




        <RelativeLayout
            android:id="@+id/rlToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/headear_back_small">

            <LinearLayout
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivDrawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_drawer" />


                <ImageView
                    android:id="@+id/tvWelcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_title"
                    android:scaleType="centerCrop"
                    android:layout_marginHorizontal="50dp"/>
            </LinearLayout>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rlToolbar"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
            android:id="@+id/viewMain"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="15dp">

                <ImageView
                    android:id="@+id/ivKhoya"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_khoyapaya" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginStart="-51dp"
                android:layout_marginEnd="10dp"
                android:shadowColor="@color/white"
                android:backgroundTint="#ffffff"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="40dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="5dp">

                        <TextView
                            android:id="@+id/tvKhoyaPaya"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:text="TrackChild / Khoya Paya"
                            android:textColor="#0B30AE"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvMyChildMissing"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingHorizontal="@dimen/dp_20"
                        android:paddingVertical="@dimen/dp_10"
                        android:layout_gravity="center"

                        android:text="My Child is Missing"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvSearchChild"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_marginVertical="@dimen/dp_5"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingHorizontal="@dimen/dp_20"
                        android:paddingVertical="@dimen/dp_10"
                        android:text="Search a Missing Child"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/white" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewMaintwo"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="15dp">

                <ImageView
                    android:id="@+id/ivReport"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/report_case" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginStart="-51dp"
                android:layout_marginEnd="10dp"
                android:shadowColor="@color/white"
                android:backgroundTint="#ffffff"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="40dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="5dp">

                        <TextView
                            android:id="@+id/tvSighted"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:text="I Have Sighted a Child"
                            android:textColor="#0B30AE"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvEnterDetails"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingHorizontal="@dimen/dp_20"
                        android:paddingVertical="@dimen/dp_10"
                        android:text="Enter Details"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

