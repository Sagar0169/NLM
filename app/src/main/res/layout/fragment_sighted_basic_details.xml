<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ClickAction"
            type="mission.vatsalya.ui.fragment.SightedBasicDetailsFragment.ClickActions" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.BasicDetailsFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/llParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp_15">


                <!--                <TextView-->
                <!--                    android:id="@+id/tvHead"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginTop="@dimen/dp_20"-->
                <!--                    android:text="Hospital for assessment/issue of UDID card/ diability certtificate "-->
                <!--                    android:textColor="@color/black"-->
                <!--                    android:textSize="@dimen/sp_20" />-->

                <TextView
                    android:id="@+id/tvTypeOfID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Child Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:id="@+id/etChildName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/curve_all_corner_grey"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="Missing Child's Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    android:maxLength="50"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:paddingVertical="@dimen/dp_5"
                    android:singleLine="true"
                    android:textColorHint="@color/grey" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Approximate Age"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnerYear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:background="@drawable/curve_all_corner_grey"
                        android:spinnerMode="dropdown"
                        android:dropDownWidth="match_parent"
                        android:popupBackground="@android:color/white"
                        android:dropDownHorizontalOffset="0dp"
                        android:entries="@array/year_array"/>

                    <Spinner
                        android:id="@+id/spinnerMonth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_weight="1"
                        android:background="@drawable/curve_all_corner_grey"
                        android:spinnerMode="dropdown"
                        android:dropDownWidth="match_parent"
                        android:popupBackground="@android:color/white"
                        android:dropDownHorizontalOffset="0dp"
                        android:entries="@array/month_array"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Approximate Height"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnerFeet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:background="@drawable/curve_all_corner_grey"
                        android:spinnerMode="dropdown"
                        android:dropDownWidth="match_parent"
                        android:popupBackground="@android:color/white"
                        android:dropDownHorizontalOffset="0dp"
                        android:entries="@array/feet_array"/>

                    <Spinner
                        android:id="@+id/spinnerInches"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_weight="1"
                        android:background="@drawable/curve_all_corner_grey"
                        android:spinnerMode="dropdown"
                        android:dropDownWidth="match_parent"
                        android:popupBackground="@android:color/white"
                        android:dropDownHorizontalOffset="0dp"
                        android:entries="@array/inches_array"/>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/gender"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:checked="true"
                        android:paddingEnd="@dimen/dp_5"
                        android:text="Male"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        app:buttonTint="@color/darkBlue" />

                    <RadioButton
                        android:id="@+id/rbFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_7"
                        android:paddingEnd="@dimen/dp_5"
                        android:text="Female"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        app:buttonTint="@color/darkBlue" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbTransgender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:paddingEnd="@dimen/dp_5"
                        android:text="Transgender"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        app:buttonTint="@color/darkBlue" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Differently Abled(Physical/Mental)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbDaYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:paddingEnd="@dimen/dp_5"
                        android:text="Yes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        app:buttonTint="@color/darkBlue" />

                    <RadioButton
                        android:id="@+id/rbDaNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_7"
                        android:paddingEnd="@dimen/dp_5"
                        android:text="No"
                        android:checked="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        app:buttonTint="@color/darkBlue" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Mentally Ill"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rbMentallyYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:paddingEnd="@dimen/dp_5"
                        android:text="Yes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        app:buttonTint="@color/darkBlue" />

                    <RadioButton
                        android:id="@+id/rbMentallyNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_7"
                        android:paddingEnd="@dimen/dp_5"
                        android:text="No"
                        android:checked="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        app:buttonTint="@color/darkBlue" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Date of Sighting"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <RelativeLayout
                    android:id="@+id/rlDateOfSighting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:elevation="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvRegisterCategory">


                    <TextView
                        android:id="@+id/tvDateOfSighting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/curve_all_corner_grey"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:text="DD/MM/YYYY"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />



                    <ImageView
                        android:id="@+id/ivArrowUpDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="20dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="visible" />
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Relationship"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <RelativeLayout
                    android:id="@+id/rlRelationship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:elevation="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvRegisterCategory">


                    <TextView
                        android:id="@+id/tvSelect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/curve_all_corner_grey"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:text="Please Select"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/ivArrowDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="20dp"
                        android:elevation="2sp"
                        android:padding="5dp"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivArrowUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="20dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="visible" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llRelation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/curve_all_corner_grey"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvRelation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="10dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/curve_all_corner_grey"
                    android:clickable="false"
                    android:fontFamily="@font/opensans_regular"
                    android:hint="Describe how the child was lost"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    android:textColorHint="@color/grey"
                    android:minLines="3"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:paddingVertical="@dimen/dp_5" />

                <TextView
                    android:id="@+id/tvSendOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/curve_fill_blue"
                    android:clickable="true"
                    android:fontFamily="@font/poppins_medium"
                    android:onClick="@{ClickAction::next}"
                    android:paddingHorizontal="@dimen/dp_20"
                    android:paddingVertical="@dimen/dp_10"
                    android:text="Next"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </LinearLayout>

        </ScrollView>



    </FrameLayout>
</layout>