<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ClickAction"
            type="com.nlm.ui.fragment.national_livestock_mission_fragments.NLSIAConstraintsFacedByIAFragment.ClickActions" />
    </data>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/clParent"
        tools:context=".ui.fragment.national_livestock_mission_fragments.NLMDistrictWiseNoOfAiCenter">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:scrollbars="none">

    <LinearLayout
        android:id="@+id/llParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_10">
        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/opensans_semibold"
            android:text="Infrastructural:"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <EditText

            android:id="@+id/etInfrastructural"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/curve_all_corner_grey"
            android:inputType="textMultiLine"
            android:maxLength="500"
        android:minLines="5"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:gravity="top"
        android:scrollbars="vertical"
        android:overScrollMode="always" />
        <TextView
            android:id="@+id/tvOrganizational"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/opensans_semibold"
            android:text="Organizational:"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <EditText

            android:id="@+id/etOrganizational"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/curve_all_corner_grey"
            android:inputType="textMultiLine"
            android:maxLength="500"
            android:minLines="5"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:gravity="top"
            android:scrollbars="vertical"
            android:overScrollMode="always" />
        <TextView
            android:id="@+id/tvFunds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/opensans_semibold"
            android:text="Funds:"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <EditText

            android:id="@+id/etFunds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/curve_all_corner_grey"
            android:inputType="textMultiLine"
            android:maxLength="500"
            android:minLines="5"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:gravity="top"
            android:scrollbars="vertical"
            android:overScrollMode="always" />
        <TextView
            android:id="@+id/tvAny_Other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/opensans_semibold"
            android:text="Any other:"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <EditText

            android:id="@+id/etAnyOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/curve_all_corner_grey"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:maxLength="500"
            android:minLines="5"
            android:overScrollMode="always"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tvAny_Asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/opensans_semibold"
            android:text="Any of the assets created under NLM and not being used. Specify the reasons:"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <EditText

            android:id="@+id/etAnyOfTheAsset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/curve_all_corner_grey"
            android:inputType="textMultiLine"
            android:maxLength="500"
            android:minLines="5"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:gravity="top"
            android:scrollbars="vertical"
            android:overScrollMode="always" />

        <TextView
            android:id="@+id/tvSendOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/curve_fill_blue"
            android:clickable="true"
            android:fontFamily="@font/poppins_medium"
            android:paddingHorizontal="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_10"
            android:text="@string/save_next"
            android:onClick="@{ClickAction::saveAndNext}"
            android:textAlignment="center"
            android:textColor="@color/white" />
    </LinearLayout>
    </ScrollView>
    </RelativeLayout>
</layout>