<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="8dp">

            <!-- Permit Number and State Name -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:cardElevation="5dp"
                app:cardCornerRadius="@dimen/dp_20"
                android:layout_margin="@dimen/dp_10"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/llParent"
                        android:layout_width="0dp"
                        android:layout_weight="1.7"
                        android:layout_height="wrap_content"
                        android:background="@drawable/curve_all_corner_bg_item_white"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_10"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:textColor="@color/black"
                                android:id="@+id/state_name"
                                android:text="State Name"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/etStateName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"

                                android:layout_marginEnd="@dimen/dp_3"
                                android:layout_weight="1"
                                android:drawablePadding="@dimen/dp_5"
                                android:fontFamily="@font/inter_light"
                                android:maxLines="2"
                                android:singleLine="false"
                                android:text="NA"
                                android:textColor="@color/textGrey"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:id="@+id/tvDistrictName"
                                android:text="District Name "
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/etDistrictName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp_3"
                                android:layout_weight="1"
                                android:drawablePadding="@dimen/dp_5"
                                android:fontFamily="@font/inter_light"
                                android:text="@string/na"
                                android:textColor="@color/textGrey"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:id="@+id/Submit_as"
                                android:text="NLM visit date"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/etNlmVistDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp_3"
                                android:layout_weight="1"
                                android:drawablePadding="@dimen/dp_5"
                                android:fontFamily="@font/inter_light"

                                android:text="@string/na"
                                android:textColor="@color/textGrey"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:textColor="@color/black"
                                android:id="@+id/status_IA"
                                android:text="IA Status"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/etStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"

                                android:layout_marginEnd="@dimen/dp_3"
                                android:layout_weight="1"
                                android:drawablePadding="@dimen/dp_5"
                                android:fontFamily="@font/inter_light"
                                android:maxLines="2"
                                android:singleLine="false"
                                android:text="NA"
                                android:textColor="@color/textGrey"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:textColor="@color/black"
                                android:id="@+id/status_nlm"

                                android:text="NLM Status"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/etStatus_nlm"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"

                                android:layout_marginEnd="@dimen/dp_3"
                                android:layout_weight="1"
                                android:drawablePadding="@dimen/dp_5"
                                android:fontFamily="@font/inter_light"
                                android:maxLines="2"
                                android:singleLine="false"
                                android:text="NA"
                                android:textColor="@color/textGrey"
                                android:textSize="14sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_medium"
                                android:text="Created On"

                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:fontFamily="@font/poppins_bold"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvCreated"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp_3"
                                android:layout_weight="1"
                                android:drawablePadding="@dimen/dp_5"
                                android:fontFamily="@font/inter_light"

                                android:text="@string/na"
                                android:textColor="@color/textGrey"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llActions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="-5dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="@id/llParent"
                            app:layout_constraintStart_toStartOf="@id/llParent"
                            app:layout_constraintTop_toBottomOf="@id/llParent">

                            <!-- View Icon -->


                            <ImageView
                                android:id="@+id/ivView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dp_5"
                                android:contentDescription="View"
                                android:padding="@dimen/dp_5"
                                android:src="@drawable/ic_view"
                                app:tint="@color/black" />

                            <!-- Edit Icon -->
                            <ImageView
                                android:id="@+id/ivEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dp_5"
                                android:contentDescription="Edit"

                                android:padding="@dimen/dp_5"
                                android:src="@drawable/edit_icon"
                                app:tint="@color/black" />

                            <!-- Delete Icon -->
                            <ImageView
                                android:id="@+id/ivDelete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dp_5"
                                android:contentDescription="Delete"

                                android:padding="@dimen/dp_5"
                                android:src="@drawable/ic_deleted"
                                app:tint="@color/black" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/curve_all_corner_bg_item"
                        android:orientation="horizontal"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

</layout>
