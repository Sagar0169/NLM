<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="ClickAction"
            type="com.nlm.ui.fragment.TextSeachFragment.ClickActions" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.TextSeachFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true">

        <LinearLayout
            android:id="@+id/llParent"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_15">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/opensans_semibold"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/etName"
            android:hint="Name"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/curve_all_corner_grey"
            android:maxLength="50"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textColorHint="@color/grey"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:singleLine="true" />


            <TextView

                android:id="@+id/questionTv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/opensans_semibold"
                android:padding="5dp"
                android:text="Search In"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/ll5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">

                <RadioGroup
                    android:id="@+id/rgSearchin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbMissing"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:checked="true"
                        android:paddingEnd="@dimen/dp_5"
                        android:text="Male"
                        app:buttonTint="@color/darkBlue"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <RadioButton
                        android:id="@+id/rbSighted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_7"
                        android:paddingEnd="@dimen/dp_5"
                        android:text="Female"
                        app:buttonTint="@color/darkBlue"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                    <RadioButton
                        android:id="@+id/rbBoth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_7"
                        android:paddingEnd="@dimen/dp_5"
                        android:text="Transgender"
                        app:buttonTint="@color/darkBlue"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </RadioGroup>
            </LinearLayout>
            <TextView
                android:id="@+id/tvSubmit"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@drawable/curve_fill_blue"
                android:fontFamily="@font/poppins_medium"
                android:paddingHorizontal="@dimen/dp_20"
                android:paddingVertical="@dimen/dp_10"
                android:text="@string/submit"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>
        </ScrollView>

    </FrameLayout>
</layout>