<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ClickAction"
            type="com.nlm.ui.fragment.national_livestock_mission_fragments.NLSIAFeedFodderFragment.ClickActions" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/clParent"
        tools:context=".ui.fragment.national_livestock_mission_fragments.NLSIAFeedFodderFragment">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/llParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/curve_all_corner_grey"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dp_10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:fontFamily="@font/lexend_bold"
                        android:text="Feed Fodder Sitaution in the State :"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dp_10"
                        android:background="@drawable/curve_back_grey"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/dp_10">

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="Assessments of green / dry Fodder and concentrate feed requirement:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <EditText

                            android:id="@+id/etAssessmentOfGreen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:background="@drawable/curve_all_corner_grey"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:maxLength="500"
                            android:overScrollMode="always"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_5"
                            android:scrollbars="vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="@string/availability_of_green_fodder_area_production"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <EditText

                            android:id="@+id/etAvailabilityOfGreen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:background="@drawable/curve_all_corner_grey"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:maxLength="500"
                            android:overScrollMode="always"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_5"
                            android:scrollbars="vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="Availability of dry fodder - Agri. by products / hay etc:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <EditText

                            android:id="@+id/etAvailibilityOfDry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:background="@drawable/curve_all_corner_grey"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:maxLength="500"
                            android:overScrollMode="always"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_5"
                            android:scrollbars="vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/tv4r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="Availability of concentrate feed ingredients:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <EditText

                            android:id="@+id/etAvailibilityOfConcentrate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:background="@drawable/curve_all_corner_grey"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:maxLength="500"

                            android:overScrollMode="always"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_5"
                            android:scrollbars="vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/tv5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="Availability of Common Pasture Land/ Grass Land:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <EditText

                            android:id="@+id/etAvailabilityCommon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:background="@drawable/curve_all_corner_grey"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:maxLength="500"
                            android:overScrollMode="always"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_5"
                            android:scrollbars="vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/tv6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="Efforts of State Govt. to meet the deficit:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <EditText

                            android:id="@+id/etEffortsOfState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:background="@drawable/curve_all_corner_grey"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:maxLength="500"
                            android:overScrollMode="always"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_5"
                            android:scrollbars="vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:background="@drawable/curve_all_corner_grey"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dp_10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:fontFamily="@font/lexend_bold"
                        android:text="Fodder Seed procurement and Distribution :"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dp_10"
                        android:background="@drawable/curve_back_grey"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/dp_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="Name of the Agency from where fodder seed is procured:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <EditText
                             android:id="@+id/etNameOfAgency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:background="@drawable/curve_all_corner_grey"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:maxLength="500"
                            android:overScrollMode="always"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_5"
                            android:scrollbars="vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="Quantity of fodder seed procured and distributed"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <EditText
                            android:id="@+id/etQuantityOfFodder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:background="@drawable/curve_all_corner_grey"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:maxLength="500"
                            android:overScrollMode="always"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_5"
                            android:scrollbars="vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="Distribution Channel:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <EditText
                            android:id="@+id/etDistributionChannel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:background="@drawable/curve_all_corner_grey"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:maxLength="500"
                            android:overScrollMode="always"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_5"
                            android:scrollbars="vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="Availability of concentrate feed ingredients:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <EditText
                             android:id="@+id/AvailabilityOfConcentrate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:background="@drawable/curve_all_corner_grey"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:maxLength="500"

                            android:overScrollMode="always"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_5"
                            android:scrollbars="vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="Number of Fodder Farms in the State. Provide location and fodder production capacity and name of Grass produced:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <EditText
                            android:id="@+id/etNumberOfFodder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:background="@drawable/curve_all_corner_grey"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:maxLength="500"
                            android:overScrollMode="always"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_5"
                            android:scrollbars="vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvAddMore2"
                    android:layout_marginVertical="@dimen/dp_7"
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curve_fill_blue"
                    android:clickable="true"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingHorizontal="@dimen/dp_20"
                    android:onClick="@{ClickAction::addDocDialog}"
                    android:paddingVertical="@dimen/dp_10"
                    android:text="Add Documents"
                    android:textColor="@color/white" />
                <com.nlm.utilities.NonScrollableRecyclerView
                    android:id="@+id/recyclerView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_7"

                    android:paddingTop="8dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginHorizontal="@dimen/dp_3"
                        android:layout_weight="0.5"
                        android:id="@+id/tvSaveDraft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@drawable/curve_fill_blue"
                        android:backgroundTint="@color/green"
                        android:clickable="true"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingHorizontal="@dimen/dp_20"
                        android:paddingVertical="@dimen/dp_10"
                        android:text="Save As Draft"
                        android:onClick="@{ClickAction::saveAsDraft}"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/tvSendOtp"
                        android:layout_marginHorizontal="@dimen/dp_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@drawable/curve_fill_blue"
                        android:clickable="true"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingHorizontal="@dimen/dp_20"
                        android:paddingVertical="@dimen/dp_10"
                        android:text="Submit"
                        android:textSize="20sp"
                        android:onClick="@{ClickAction::saveAndNext}"
                        android:textAlignment="center"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</layout>