<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="ClickAction"
            type="com.nlm.ui.fragment.RGMStateImplementingAgencyNLMFragment.ClickActions" />
    </data>
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/clParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.RGMStateImplementingAgencyNLMFragment">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:scrollbars="none">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/to_be_filled_by_nlm"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_20"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tvYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/agency_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <EditText
                        android:id="@+id/etyear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@drawable/curve_all_corner_grey"
                        android:maxLength="50"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:paddingVertical="@dimen/dp_5"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tvState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/state"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/etState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@drawable/curve_all_corner_grey"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:fontFamily="@font/opensans_regular"
                        android:paddingHorizontal="@dimen/dp_10"

                        android:paddingVertical="@dimen/dp_5"
                        android:singleLine="true"
                        android:text="@string/select"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/location_of_ia"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <EditText
                        android:id="@+id/etLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@drawable/curve_all_corner_grey"
                        android:maxLength="50"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:paddingVertical="@dimen/dp_5"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tvCEO_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/ceo_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <EditText
                        android:id="@+id/etCEO_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:background="@drawable/curve_all_corner_grey"
                        android:maxLength="50"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:paddingVertical="@dimen/dp_5"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dp_10"
                        android:background="@drawable/curve_all_corner_grey"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/dp_10">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dp_15"
                        android:background="@drawable/curve_all_corner_dark_grey"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:paddingVertical="@dimen/dp_5">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="Remarks of NLM"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <RadioGroup
                            android:id="@+id/rgRemarksOfNlm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/rbCooperation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cooperation"
                                android:textColor="@color/black"
                                app:buttonTint="@color/black"
                                android:textSize="@dimen/sp_14" />

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/rbNonCoorperation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Non-Cooperation"
                                android:textColor="@color/black"
                                app:buttonTint="@color/black"
                                android:textSize="@dimen/sp_14" />

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/rbPartialData"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Partial Data"
                                android:textColor="@color/black"
                                app:buttonTint="@color/black"
                                android:textSize="@dimen/sp_14" />

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/rbNotProvided"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not Provided"
                                android:textColor="@color/black"
                                app:buttonTint="@color/black"
                                android:textSize="@dimen/sp_14" />

                        </RadioGroup>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/curve_all_corner_grey"
                            android:fontFamily="@font/opensans_regular"
                            android:hint="Remarks"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_15"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dp_10"
                            android:background="@drawable/curve_all_corner_grey"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/dp_10">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:fontFamily="@font/lexend_bold"
                                android:text="Constraints faced by IA in implementation of the project"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_16" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/dp_10"
                                android:background="@drawable/curve_back_grey"
                                android:orientation="vertical"
                                android:paddingHorizontal="@dimen/dp_10">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:text="@string/infrastructure"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_16" />

                                <EditText
                                    android:id="@+id/etNameOfAgency"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_7"
                                    android:background="@drawable/curve_all_corner_grey"
                                    android:gravity="top"
                                    android:inputType="textMultiLine"
                                    android:maxLength="500"
                                    android:overScrollMode="always"
                                    android:paddingHorizontal="@dimen/dp_10"
                                    android:paddingVertical="@dimen/dp_5"
                                    android:scrollbars="vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_16" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:text="@string/organisational"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_16" />

                                <EditText
                                    android:id="@+id/etQuantityOfFodder"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_7"
                                    android:background="@drawable/curve_all_corner_grey"
                                    android:gravity="top"
                                    android:inputType="textMultiLine"
                                    android:maxLength="500"
                                    android:overScrollMode="always"
                                    android:paddingHorizontal="@dimen/dp_10"
                                    android:paddingVertical="@dimen/dp_5"
                                    android:scrollbars="vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_16" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:text="@string/funds"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_16" />

                                <EditText
                                    android:id="@+id/etDistributionChannel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_7"
                                    android:background="@drawable/curve_all_corner_grey"
                                    android:gravity="top"
                                    android:inputType="textMultiLine"
                                    android:maxLength="500"
                                    android:overScrollMode="always"
                                    android:paddingHorizontal="@dimen/dp_10"
                                    android:paddingVertical="@dimen/dp_5"
                                    android:scrollbars="vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_16" />



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:text="@string/any_other"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_16" />

                                <EditText
                                    android:id="@+id/etNumberOfFodder"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_7"
                                    android:background="@drawable/curve_all_corner_grey"
                                    android:gravity="top"
                                    android:inputType="textMultiLine"
                                    android:maxLength="500"
                                    android:overScrollMode="always"
                                    android:paddingHorizontal="@dimen/dp_10"
                                    android:paddingVertical="@dimen/dp_5"
                                    android:scrollbars="vertical"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_16" />

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dp_10"
                            android:background="@drawable/curve_all_corner_grey"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/dp_10">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_7"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="Any of the assets created under RGM and not being used. Specify the reasons"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_16" />
                            <TextView
                                android:id="@+id/tvAddMore1"
                                android:layout_marginVertical="@dimen/dp_7"
                                android:layout_width="wrap_content"
                                android:layout_gravity="end"
                                android:layout_height="wrap_content"
                                android:background="@drawable/curve_fill_blue"
                                android:clickable="true"
                                android:onClick="@{ClickAction::AgencyAnyOfTheAsset}"
                                android:fontFamily="@font/poppins_medium"
                                android:paddingHorizontal="@dimen/dp_20"
                                android:paddingVertical="@dimen/dp_10"
                                android:text="Add More"
                                android:textColor="@color/white" />

                            <com.nlm.utilities.NonScrollableRecyclerView
                                android:id="@+id/rvAnyOfAssets"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="8dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dp_10"
                            android:background="@drawable/curve_all_corner_grey"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/dp_10">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_7"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="Any of the assets created under RGM and not being used. Specify the reasons"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_16" />
                            <TextView

                                android:id="@+id/tvAddMore2"
                                android:layout_marginVertical="@dimen/dp_7"
                                android:layout_width="wrap_content"
                                android:layout_gravity="end"
                                android:layout_height="wrap_content"
                                android:background="@drawable/curve_fill_blue"
                                android:clickable="true"
                                android:onClick="@{ClickAction::NumberOfFertilityCamps}"
                                android:fontFamily="@font/poppins_medium"
                                android:paddingHorizontal="@dimen/dp_20"
                                android:paddingVertical="@dimen/dp_10"
                                android:text="Add More"
                                android:textColor="@color/white" />

                            <com.nlm.utilities.NonScrollableRecyclerView
                                android:id="@+id/rvNumberOfFertitlity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="8dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llSDRv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:background="@drawable/curve_all_corner_black"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingVertical="@dimen/dp_10">
                            <TextView
                                android:id="@+id/tvSupportingDocumentView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dp_5"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="Supporting Documents"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_16" />
                            <TextView
                                android:id="@+id/tvAddMore3"
                                android:onClick="@{ClickAction::addDocDialog}"
                                android:layout_marginVertical="@dimen/dp_7"
                                android:layout_width="wrap_content"
                                android:layout_gravity="end"
                                android:layout_height="wrap_content"
                                android:background="@drawable/curve_fill_blue"
                                android:clickable="true"
                                android:fontFamily="@font/poppins_medium"
                                android:paddingHorizontal="@dimen/dp_20"
                                android:paddingVertical="@dimen/dp_10"
                                android:text="Add Documents"
                                android:textColor="@color/white" />
                            <com.nlm.utilities.NonScrollableRecyclerView
                                android:id="@+id/recyclerView1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:listitem="@layout/item_supporting_documents"
                                tools:itemCount="1"
                                android:paddingTop="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginHorizontal="@dimen/dp_3"
                            android:layout_weight="0.5"
                            android:id="@+id/tvSaveDraft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:background="@drawable/curve_fill_blue"
                            android:backgroundTint="@color/green"
                            android:clickable="true"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingHorizontal="@dimen/dp_20"
                            android:paddingVertical="@dimen/dp_10"
                            android:text="Save As Draft"
                            android:onClick="@{ClickAction::SaveAsDraft}"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:textColor="@color/white" />
                        <TextView
                            android:id="@+id/tvSendOtp"
                            android:layout_marginHorizontal="@dimen/dp_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:background="@drawable/curve_fill_blue"
                            android:clickable="true"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingHorizontal="@dimen/dp_20"
                            android:paddingVertical="@dimen/dp_10"
                            android:text="@string/save_next"
                            android:textSize="20sp"
                            android:onClick="@{ClickAction::SaveAndNext}"
                            android:textAlignment="center"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>