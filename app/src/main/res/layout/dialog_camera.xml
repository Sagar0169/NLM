<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@android:color/transparent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/curve_all_corner_white"
        android:backgroundTint="#052160">


        <TextView
            android:id="@+id/tvChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Choose Any One"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/curve_all_corner_white"
            android:fontFamily="@font/poppins_regular"
            android:padding="5dp"
            android:text="Camera"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_below="@id/tvChoose" />

        <TextView
            android:id="@+id/tvGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/curve_all_corner_white"
            android:fontFamily="@font/poppins_regular"
            android:padding="5dp"
            android:text="Gallery"
            android:layout_below="@id/tvCamera"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="19sp"/>

        <TextView
            android:id="@+id/tvPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/curve_all_corner_white"
            android:fontFamily="@font/poppins_regular"
            android:padding="5dp"
            android:text="Pdf"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:visibility="gone"
            android:layout_below="@id/tvGallery"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivCross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/white_circle"
        android:elevation="5dp"
        android:padding="5dp"
        android:src="@drawable/ic_black_cross" />

</FrameLayout>