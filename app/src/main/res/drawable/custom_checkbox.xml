<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Unchecked state -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <size android:width="20dp" android:height="20dp"/>
            <solid android:color="@android:color/white"/>
            <stroke
                android:width="2dp"
                android:color="#FF0000"/> <!-- Border color for unchecked state -->
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Checked state -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="20dp" android:height="20dp"/>
                    <solid android:color="@android:color/white"/>
                    <stroke
                        android:width="2dp"
                        android:color="#FF0000"/> <!-- Border color for checked state -->
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/custom_checkmark"/> <!-- Custom checkmark drawable -->
        </layer-list>
    </item>

</selector>
